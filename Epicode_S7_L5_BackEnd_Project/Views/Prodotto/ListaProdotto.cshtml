@model IEnumerable<Epicode_S7_L5_BackEnd_Project.Models.Prodotto>

@{
    ViewBag.Title = "ListaProdotto";
}

<h2>ListaProdotto</h2>

<p>
    @Html.ActionLink("Crea nuovo prodotto", "CreaProdotto")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FotoUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezzo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TempoConsegna)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ingredienti)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FotoUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prezzo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TempoConsegna)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ingredienti)
        </td>
        <td>
            @Html.ActionLink("Dettagli", "DettagliProdotto", new { id=item.IdProdotto }, new { @class = "btn btn-sm btn-warning"})
        </td>
    </tr>
}

</table>
