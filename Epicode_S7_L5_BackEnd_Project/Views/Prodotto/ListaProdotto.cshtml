@model IEnumerable<Epicode_S7_L5_BackEnd_Project.Models.Prodotto>

@{
    ViewBag.Title = "ListaProdotto";
}

<h2 class="text-center">Lista Prodotto</h2>

<p>
    @Html.ActionLink("Crea nuovo prodotto", "CreaProdotto")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card">
                <img src="~/Content/imgs/@item.FotoUrl" class="card-img-top" style="height: 200px" alt="@item.Nome">
                <div class="card-body">
                    <h5 class="card-title">@item.Nome</h5>
                    <p class="card-text">Prezzo: @item.Prezzo €</p>
                    <p class="card-text">Tempo di consegna: @item.TempoConsegna min</p>
                    <p class="card-text flex-grow-1">Ingredienti: @item.Ingredienti</p>
                    @Html.ActionLink("Dettagli", "DettagliProdotto", new { id = item.IdProdotto }, new { @class = "btn btn-warning" })
                </div>
            </div>
        </div>
    }
</div>